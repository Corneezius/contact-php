<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <link href="css/style.css" rel="stylesheet" type="text/css">
    <title>To Do List</title>
</head>
<body>
    <div class="jumbotron">
    <h1>Homies</h1>

    <form action='/homies' method='post'>
        <label for='name'>Name</label>
        <input id='name' name='name' type='text'>

        <label for='phone'>Phone</label>
        <input id='phone' name='phone' type='text'>

        <label for='address'>Address</label>
        <input id='address' name='address' type='text'>

        <button type='submit btn-success'>Add Contact</button>
    </form>

    <form action='/delete_homies' method='post'>
        <button type='submit' class="btn btn-danger">Clear List</button>
    </form>

    </div>
    <div class="contacts">
    {% if homies is not empty %}
       <h2>Here are all your homies:</h2>
       <ol>
           {% for homie in homies %}
               <li><h2>{{ homie.getName }}</h2>
                <p>{{ homie.getPhone }}</p>
               <p>{{ homie.getAddress }}</p></li>
           {% endfor %}
       </ol>
   {% endif %}
</body>
</html>
